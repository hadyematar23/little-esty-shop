<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@discount.id}", method: :patch, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, value: @discount.title %>
  <%= form.label :percentage_discount %>
  <%= form.number_field :percentage_discount, value: @discount.percentage_discount %>
  <%= form.label :quantity_threshold %>
  <%= form.number_field :quantity_threshold, value: @discount.quantity_threshold %>
  <%= form.submit "Update Discount" %>
<% end %>